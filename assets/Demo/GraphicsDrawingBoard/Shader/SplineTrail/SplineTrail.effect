CCEffect %{
  techniques:
  - passes:
    - vert: vs
      frag: fs
      blendState:
        targets:
        - blend: true
      rasterizerState:
        cullMode: none
      properties:
        texture: { value: white, inspector: { displayName: '贴图' } }
        size: { value: [15.0, 20.0, 0.666667, 0.05], inspector: { displayName: '片段大小', tooltip: '(单位px)长、宽、1/长、1/宽'} } 
}%

CCProgram vs %{
  precision highp float;

  #include <cc-global>
  #include <cc-local>

  in vec3 a_position;
  
  in float a_width;
  out float v_width;

  in float a_dist;
  out float v_dist;

  void main () {
    vec4 pos = vec4(a_position, 1);
    pos = cc_matViewProj * cc_matWorld * pos;

    v_width = a_width;
    v_dist = a_dist;

    gl_Position = pos;
  }
}%


CCProgram fs %{
  #if CC_SUPPORT_standard_derivatives
    #extension GL_OES_standard_derivatives : enable
  #endif

  precision highp float;
  
  #include <cc-global>

  in float v_width;
  in float v_dist;

  uniform sampler2D texture;
  uniform UARGS {
    vec4 size;
  };

  float Remap01(float a, float b, float t) {
    return (t-a) / (b-a);
  }

  float Remap(float a, float b, float c, float d, float t) {
    return Remap01(a, b, t) * (d-c) + c;
  }

  // 脉冲函数
  // X,Y区间都是[0,1]，X=0.5位置Y=1
  // https://www.iquilezles.org/www/articles/functions/functions.htm
  float Pulse(float x) {
    x *= 0.4;
    x = x + 0.5;
    
    float k = 16.;
    return pow(4.0 * x * (1.0 - x), k);
  }

  void main () {
#if USE_TEXTURE
    vec2 uv = fract(vec2(v_width, v_dist) * size.wz);
    // vec2 uv = vec2(v_width * size.w, fract(v_dist * size.z));

  #if NORMALIZE_SIZE
    // 长宽归一化。todo: 偏移到中心位置
    uv *= max(vec2(1.0), size.yx * size.zw);
  #endif
    vec4 color = texture2D(texture, uv);
    gl_FragColor = color;
#elif BLOOM
    float alpha = abs(v_side_dist);
    float dist = fract(v_dist / 60.);

    // 轮廓宽度(0.0, 1.0), 对应alpha区域
    float outlineWidth = 1.0;

    // 选择一个alpha值做为轮廓的中线
    float centerAlpha = 0.;

    float alphaDist = abs(alpha - centerAlpha);
    float mask = smoothstep(outlineWidth, 0., alphaDist);
    vec4 col = vec4(vec3(1.,0.,1.), mask);
    
    // 底色基础上叠加一个亮度，叠加后中心位置变白
    // 对亮度做一个动画
    float brightness = Remap(0., 1., 0.6, 1.0, abs(sin(cc_time.x * 2.5)));
    // col.rgb = vec3(0.);
    col.rgb += Pulse(alphaDist) * brightness;

    col.a *= dist;
    gl_FragColor = col;
#else

    gl_FragColor = vec4(1., 0., 1., 1.);
#endif
  }
}%
